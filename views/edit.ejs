<!DOCTYPE html>
<html lang="en">
  <head>
      
                <% include ./partials/head.ejs %>
              
    <title>Edit Request</title>
  </head>
  <body>
        <% include ./partials/nav.ejs %>
   
        <h2>Inventory Logistics-Edit</h2>
    
    <form action="/request/<%=request.id%>?_method=PUT" method="POST">
        <div class="form-group row">
                <div class="col-auto">
            <div class="form-group">
                <input type="checkbox" name="Urgent" />
            <label for="urgentCheckbox">Check if request is urgent</label>  
            </div>
            <div class="col-auto">
                    <input type="text" name="location" value="<%=request.location%>"/>
            </div>
            
            <div class="col-auto">
            <button type="submit" class="btn btn-primary">Submit</button>  
            </div>   
             
        </div>
    </div>
        <div class="form-group row">
                <div class="col-auto">
                    <label for="first Name">First Name</label>
                    <input type="text" name="firstName" value="<%=request.firstName%>"/>
                  </div>
                  <div class="col-auto2">
                    <label for="last name">Last Name</label>
                    <input type="text" name="lastName" value="<%=request.lastName%>"/>
                  </div>
                  <div class="col-auto3">
                        <label for="first Name">Phone</label>
                        <input type="text" style="width: 180px;"name="phone" value="<%=request.phone%>"/>
                      </div>
                      <div class="col-auto">
                     
                        </div> 
        </div>
        <div class="form-group row">
                <div class="col-auto">
                    <label for="salinebags">Saline Bags</label>
                    <input type="number" style="width: 168px;"name="saline_bags" value="<%=request.saline_bags%>"/>
                  </div>
                  <div class="col-auto2">
                    <label for="tape">Tape</label>
                    <input type="number" style="width: 220px;"name="tape" value="<%=request.tape%>"/>
                  </div>
                  <div class="col-auto3">
                        <label for="bandages4">Bandages 4x4</label>
                        <input type="number" style="width: 120px;" name="bandages_4x4" value="<%=request.bandages_4x4%>"/>
                      </div>
                      <div class="col-auto">
                     
                        </div> 
        </div>   
        <div class="form-group row">
                <div class="col-auto">
                    <label for="bandages6">Bandages 6x9</label>
                    <input type="number" style="width: 142px;" name="bandages_6x9" value="<%=request.bandages_6x9%>"/>
                  </div>
                  <div class="col-auto2">
                    <label for="bandages">Bandages 2x2</label>
                    <td> <input type="number" style="width: 160px;"name="bandages_2x2" value="<%=request.bandages_2x2%>"/>
                  </div>
                  <div class="col-auto3">
                        <label for="ivsupplies">IV Supplies</label>
                        <input type="number" style="width: 143px;"name="iv_supplies" value="<%=request.iv_supplies%>"/>
                      </div>
                      <div class="col-auto">
                     
                        </div> 
        </div>
        <div class="form-group row">
                <div class="col-auto">
                    <label for="gauze">Gauze</label>
                    <input type="number" style="width: 200px;" name="gauze" value="<%=request.gauze%>"/>
                  </div>
                  <div class="col-auto2">
                    <label for="gluscose">Gluscose</label>
                    <input type="number" style="width: 198px;"name="gluscose" value="<%=request.gluscose%>"/>
                  </div>
                  <div class="col-auto3">
                        <label for="aspirin">Aspirin</label>
                        <input type="number" name="aspirin" value="<%=request.aspirin%>"/>
                      </div>
                      <div class="col-auto">
                     
                        </div> 
        </div>     
            
        <div class="form-group row">
                <div class="col-auto">
                    <label for="benznidazole">RX: Benznidazole</label>
                    <input type="number" style="width: 125px;"name="benznidazole" value="<%=request.benznidazole%>"/>
                  </div>
                  <div class="col-auto2">
                    <label for="albuterol">RX: Albuterol</label>
                    <input type="number" style="width: 180px;"name="albuterol" value="<%=request.albuterol%>"/>
                  </div>
                  <div class="col-auto3">
                        <label for="Fexinidazole">RX: Fexinidazole</label>
                        <input type="number" style="width: 110px;"name="Fexinidazole" value="<%=request.Fexinidazole%>"/>
                      </div>
                      <div class="col-auto">
                     
                        </div> 
        </div>
        <div class="form-group row">
                <div class="col-auto">
                    <label for="rifampicin">RX: Rifampicin</label>
                    <input type="number" style="width: 142px;"name="rifampicin" value="<%=request.rifampicin%>"/>
                  </div>
                  <div class="col-auto2">
                    <label for="ASMQ">RX: ASMQ</label>
                    <input type="number" style="width: 204px;"name="ASMQ" value="<%=request.ASMQ%>"/>
                  </div>
                  <div class="col-auto3">
                        <label for="NECT">RX: NECT</label>
                        <input type="number" style="width: 163px;"name="NECT" value="<%=request.NECT%>"/>
                      </div>
                      <div class="col-auto">
                     
                        </div> 
        </div>   
        <div class="form-group row"></div>
        <div class="col-auto4">
        </div>
            </form>
        </div>
        
        </body>
    
    <footer>
    <% include ./partials/footer.ejs %>
    </footer>

</html>