<!DOCTYPE html>
<html lang="en">
  <head>
      
                <% include ./partials/head.ejs %>
              
    <title>Summary of Requests</title>
  </head>
  <body>
        <% include ./partials/nav.ejs %>
    <h1>Inventory Logistics - Doctors Across Borders</h1>
        
        <ul>
            <h3 class="urgent">URGENT! ACTION THIS DAY!</h3>
          <% urgentPriority.forEach(element => {%>
          <li>
            <a href="/request/<%=element.id; %>"><%=element.lastName;%>, <%=element.firstName;%></a> 
            <%=element.date; %> 
            
            <a href="/request/:id/edit"><button type="button" name="button" class="new-product three columns">Edit</button></a>
            <form action="/request/<%=element.id; %>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE" />
            </form>
          </li>
          <% }) %>
        </ul>
        <ul>
          <h3 class="urgent">Standard Priority</h3>
          <% regularPriority.forEach(element => {%>
          <li>
            <a href="/request/<%=element.id; %>"><%=element.lastName;%>, <%=element.firstName;%></a> 
            <%=element.date; %> 
            
            <a href="/request/:id/edit"><button type="button" name="button" class="new-product three columns">Edit</button></a>
            <form action="/request/<%=element.id; %>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE" />
            </form>
          </li>
          <% }) %>
        </ul>
      </body>
    </html>
    <footer>
    <% include ./partials/footer.ejs %>
    </footer>
  </body>
</html>
