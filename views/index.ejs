<!DOCTYPE html>
<html lang="en">
  <head>
      
                <% include ./partials/head.ejs %>
              
    <title>Summary of Requests</title>
  </head>
  <body>
    
        <div class="imgclass">
        <img src="/images/Untitled presentation.png" width=100% height=auto>
      
    <h4><span>The Location Support Team @ DAB provides medical and pharmaceutical supplies worldwide.</span></h4></div>
    <h5>Inventory Logistics  -Summary of Orders </h5>
    <div id="parent" class ="d-flex p-2">
    <div class="d-flex justify-content-center" > 
      
          <section class="form-elegant scrollbar-light-blue">
              <h3 class="urgent">Urgent</h3>
            <ul>
          
          <% urgentPriority.forEach(element => {%>
          <li>
              <a href="/request/<%=element.id%>/edit"><button type="button" name="button" class="new-product three columns">Edit</button></a> 
              <a href="/request/<%=element.id; %>">Dr. <%=element.lastName;%> (<%=element.location;%>)</a> 
            <%=element.date; %> 
            
            
           
          
            </form>
          </li>
          <% }) %>
        </ul>
      </section>
      </div> 


      <div class="d-flex justify-content-center" > 
          <section class="form-elegant scrollbar-light-blue">
          <ul>
          <h3 class="urgent">Standard Priority</h3>
          <% regularPriority.forEach(element => {%>
          <li>
              <a href="/request/<%=element.id%>/edit"><button type="button" name="button" class="new-product three columns">Edit</button></a>  
            <a href="/request/<%=element.id; %>">Dr. <%=element.lastName;%> (<%=element.location;%>)</a> 
            <%=element.date; %> 
            
            
           
          
            </form>
          </li>
          <% }) %>
        </ul>
      </section>
      </div> 
    </div>
      </body>
    </html>
    <footer>
    <% include ./partials/footer.ejs %>
    </footer>
  </body>
</html>
